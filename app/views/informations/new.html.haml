.page-new-information
     = simple_form_for :information, :url => {:action => :create}, :html =>{:multipart => true} do |f|
          = f.input 'title', input_html: {class: 'form-control'}
          = f.input 'content', input_html: {class: 'form-control'}
          = f.input 'image',  input_html: {class: 'form-control', type: 'file', :onchange => "document.getElementById('image_url').value = this.value"}
          = f.collection_radio_buttons 'information_type', [["就业信息", '就业信息'] ,["工友故事", '工友故事'],['技能培训','技能培训'],['安全信息','安全信息']], :first, :last
          %button.btn.btn-defualt
               = '提交'